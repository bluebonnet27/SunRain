<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SunRain" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amber_darken_2</item>
        <item name="colorPrimaryVariant">@color/amber_darken_4</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_darken_2</item>
        <item name="colorSecondaryVariant">@color/light_blue_darken_4</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 设置statusBarColor 为透明-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="toolbarMainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionMenuTextColor">@color/white</item>
    </style>
</resources>