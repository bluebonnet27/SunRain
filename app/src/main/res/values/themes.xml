<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SunRain" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <!--    12.18 重构APP颜色，日间模式以MD的橙色为主色调，副色为黄色；
        夜间模式以蓝色为主色调，副色为浅蓝色    -->
        <item name="colorPrimary">@color/orange500</item>
        <item name="colorPrimaryVariant">@color/orange700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue200</item>
        <item name="colorSecondaryVariant">@color/blue700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 设置statusBarColor 为透明-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="toolbarMainTheme" parent="Theme.AppCompat.Light.NoActionBar">
<!--        这个方法不知道为什么失效了-->
<!--        <item name="actionMenuTextColor">@color/white</item>-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="circleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="about_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/grey_darken_1</item>
    </style>

    <style name="about_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="about_item_head">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="half_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#e3e3e3</item>
    </style>

    <style name="setting_text_left">
<!--        <item name="android:textColor">@color/black_to_grey</item>-->
        <item name="android:layout_marginStart">56dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginEnd">80dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="string_text_left_head">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="string_text_left_context">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>