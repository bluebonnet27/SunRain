<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SunRain" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <!--    12.18 重构APP颜色，日间模式以MD的橙色为主色调，副色为黄色；
        夜间模式以蓝色为主色调，副色为浅蓝色    -->
        <item name="colorPrimary">@color/orange500</item>
        <item name="colorPrimaryVariant">@color/orange700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue200</item>
        <item name="colorSecondaryVariant">@color/blue700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorAccent">@color/orange700</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 设置statusBarColor 为透明-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
    </style>

    <style name="toolbarMainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--        这个方法不知道为什么失效了-->
        <!--        <item name="actionMenuTextColor">@color/white</item>-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="circleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="about_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="about_item_head">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setting_text_left">
        <!--        <item name="android:textColor">@color/black_to_grey</item>-->
        <item name="android:layout_marginStart">56dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginEnd">80dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="string_text_left_head">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="string_text_left_context">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--  ProgressBar  难啊-->
    <style name="progressbar_horizon" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/progressbar_hint1</item>
    </style>

    <style name="ThemeOverlay.SunRain.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>
    
    <!-- toolbar title -->
    <style name="toolbar_title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="toolbar_subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey50</item>
    </style>

    <style name="my_clickable">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!--  toolbar menu icon  -->

    <!--  通用卡片布局  -->
    <style name="myCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>